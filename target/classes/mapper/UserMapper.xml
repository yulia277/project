<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.test.csq.mapper.UserMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.test.csq.pojo.User">
        <id column="id" property="id" />
        <result column="username" property="username" />
        <result column="password" property="password" />
        <result column="phone" property="phone"/>
        <result column="headsulpture" property="headsulpture"/>
        <result column="high" property="high"/>
        <result column="weight" property="weight"/>
        <result column="signature" property="signature"/>
        <result column="sex" property="sex"/>
        <result column="birthday" property="birthday"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, username, password
    </sql>

    <insert id="saveUser" >
        insert into t_user(username,password,phone) values (#{username},#{password},#{phone})
    </insert>

    <insert id="saveRoad">
        insert into t_road1 (localtion,Distance,Runningtime,StartTime,Calorie,Speed,Distribution,Username) values (#{json},#{distance},#{runningtime},#{startTime},#{calorie},#{speed},#{distribution},#{username})
    </insert>

    <select id="findPeo" resultType="com.test.csq.pojo.User">
        select * from t_user where phone=#{phone}
    </select>

    <select id="findPeoByUser" resultType="com.test.csq.pojo.User">
        select * from t_road1 where Username=#{Username}
    </select>

    <update id="revisePassword" >
        update t_user set password=#{password} where phone=#{phone}
    </update>

    <update id="saveHeadsulpture">
        update t_user set headsulpture=#{url}  where id=#{id}
    </update>

    <select id="getRoad" resultType="com.test.csq.common.Dto.Road1">
        SELECT * FROM (SELECT * FROM t_road1 WHERE Username=#{Username} ORDER BY StartTime DESC) a LIMIT 7
    </select>

    <insert id="saveGoodsInformation">
        insert into t_goods(photo,discribe) value (#{url},#{discribe})
    </insert>

    <update id="saveInfo">
        update t_user set sex=#{sex},high=#{high},weight=#{weight},signature=#{signature},birthday=#{birthday} where id=#{id}
    </update>

    <insert id="upLoadCommunity">
        insert into t_community(author,content,time,avatar,picture,reContent,reAuthor,rePicture) value (#{author},#{content},#{time},#{avatar},#{picture},#{reContent},#{reAuthor},#{rePicture})
    </insert>

    <select id="getCommunity" resultType="com.test.csq.common.Dto.GetCommunity">
        select * from t_community limit 10
    </select>

</mapper>
